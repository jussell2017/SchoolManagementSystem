@model SchoolManagementSystem.Models.StudentDetailsVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <label>Height</label>
            <div class="input-group">
                <label asp-for="HeightFeet" class="control-label">ft &nbsp;</label>
                <select asp-for="HeightFeet" class="form-control">
                    <option value="">select height(ft)</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
                <span asp-validation-for="HeightFeet" class="text-danger"></span>

                <label asp-for="HeightInches" class="control-label">&nbsp;&nbsp;in</label>
                <select asp-for="HeightInches" class="form-control">
                    <option value="">select height(in)</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                </select>
                <span asp-validation-for="HeightInches" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentEmail" class="control-label"></label>
                <input asp-for="StudentEmail" class="form-control" />
                <span asp-validation-for="StudentEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentPhoneNumber" class="control-label"></label>
                <input asp-for="StudentPhoneNumber" class="form-control" />
                <span asp-validation-for="StudentPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthEntryNum" class="control-label"></label>
                <input asp-for="BirthEntryNum" class="form-control" />
                <span asp-validation-for="BirthEntryNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <label>Grade Level</label>
            <div class="input-group">
                <label asp-for="StudentGrade" class="control-label">Grade&nbsp;</label>
                <Select asp-for="StudentGrade" class="form-control">
                    <option value="">Select Grade</option>
                    <option value="K3">K3</option>
                    <option value="K4">K4</option>
                    <option value="K5">K5</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </Select>
                <span asp-validation-for="StudentGrade" class="text-danger"></span>

                <label asp-for="StudentClass" class="control-label">&nbsp;&nbsp;Class&nbsp;</label>
                <select asp-for="StudentClass" class="form-control">
                    <option value="">Select Class</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
                <span asp-validation-for="StudentClass" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="StudentHouse" class="control-label"></label>
                <select asp-for="StudentHouse" class="form-control">
                    <option value="">Select an Option</option>
                    <option value="Red">Red</option>
                    <option value="Blue">Blue</option>
                    <option value="Green">Green</option>
                    <option value="Yellow">Yellow</option>
                </select>
                <span asp-validation-for="StudentHouse" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentAdditionalInfo" class="control-label"></label>
                <textarea asp-for="StudentAdditionalInfo" class="form-control"></textarea>
                <span asp-validation-for="StudentAdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back To Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
